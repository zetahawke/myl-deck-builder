<div class="container">
  <%= form_with(model: deck) do |form| %>
    <% if deck.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

        <ul>
          <% deck.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, style: "display: block", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, style: "display: block", class: "form-label" %>
      <%= form.text_field :description, class: "form-control" %>
      
      <%= form.hidden_field :user_id, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= form.submit "Send", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>
